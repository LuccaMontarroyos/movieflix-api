{
    "openapi": "3.0.0",
    "info": {
        "title": "MovieFlix Api",
        "description": "Api de gerenciamento dos filmes do MovieFlix",
        "version": "1.0.0"
    },
    "paths": {
        "/movies": {
            "get": {
                "summary": "Obter todos os filmes",
                "responses": {
                    "200": {
                        "description": "Retorna uma lista de filmes",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Movie"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Movie": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "ID do filme"
                    },
                    "title": {
                        "type": "string",
                        "description": "Nome do filme"
                    },
                    "genres_id": {
                        "type": "integer",
                        "description": "Gênero do filme"
                    },
                    "genres": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "integer",
                                "description":"ID do gênero"
                            },
                            "genre_name": {
                                "type": "string",
                                "description": "Nome do gênero"
                            }
                        }
                    },
                    "languages_id": {
                        "type": "integer",
                        "description": "Linguagem do filme"
                    },
                    "languages": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "integer",
                                "description":"ID da linguagem"
                            },
                            "language_name": {
                                "type": "string",
                                "description": "Nome da linguagem"
                            }
                        }
                    },
                    "release_date": {
                        "type": "string",
                        "format": "date",
                        "description": "Data de lançamento do filme"
                    }
                }
            }
        }
    }
}